<div class="jumbotron my-4">
    <h1 class="display-4">Welcome to Blog App!</h1>
    <p class="lead">This is a simple blog, develop with NodeJS, Express and MongoDB.</p>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Create an accont</a>
    </p>
</div>

<h2>Recently Posts</h2>

{{#each posts}}
<div class="card mt-3">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>
            {{description}}
        </p>
        <a href="/post/{{slug}}">
            <button class="btn btn-success">Read More</button>
        </a>
        <hr />
        <small>Category: {{category.name}}</small>
        <br />
        <small>Publishe in: {{date}}</small>
    </div>
</div>
{{else}}
<h5>No posts</h5>
{{/each}}