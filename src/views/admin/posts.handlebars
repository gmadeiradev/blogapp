<h2>Posts List</h2>
<hr />
<a href="/admin/posts/add">
    <button class="btn btn-success">New Post</button>
</a>

{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{title}}</h4>
        <p>
            Description: {{description}}
        </p>
        <small>Date: {{date}}</small>
        <small>Category: {{category.name}}</small><br />
        <a href="/admin/posts/edit/{{_id}}">
            <button class="btn btn-success mt-3">Edit Post</button>
        </a>
        <br />
        <a href="/admin/posts/delete/{{_id}}">
            <button class="btn btn-danger mt-3">Delete Post</button>
        </a>
    </div>
</div>
{{else}}
<p>
    No posts registered.
</p>
{{/each}}